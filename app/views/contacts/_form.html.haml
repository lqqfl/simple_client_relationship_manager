.form-horizontal
  = form_for(@contact) do |f|
    - if @contact.errors.any?
      #error_explanation.alert.alert-warning
        %h2
          = pluralize(@contact.errors.count, "error")
          prohibited this contact from being saved:
        %ul
          - @contact.errors.full_messages.each do |message|
            %li= message
    .form-group
      .col-md-offset-3.col-md-1
        = f.label :name,{class: "form-label"}
      .col-md-7
        = f.text_field :name,{autofocus: true, class: "form-control"}
    .form-group
      .col-md-offset-3.col-md-1
        = f.label :note,{class: "form-label"}
      .col-md-7
        = f.text_area :note,{class: "form-control", rows: 3}
    .form-group
      .col-md-offset-3.col-md-1
        = f.label :users,{class: "form-label"}
      .col-md-1
        = f.select :users, user_array,{include_blank: true, prompt: "Please select"}
    .form-group
      .col-md-offset-3.col-md-1
        = f.label :companies,{class: "form-label"}
      .col-md-1
        = f.select :companies, company_array, {include_blank: true, prompt: "Please select"}
    .form-group
      = f.submit "Save",class: "btn btn-primary col-md-offset-4 col-md-1"