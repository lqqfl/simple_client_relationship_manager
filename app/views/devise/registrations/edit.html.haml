.row
  .col-lg-12
    %h2.page-header
      Edit #{resource_name.to_s.humanize}
    .form-horizontal
      = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
        = devise_error_messages!
        .form-group
          .col-md-offset-1.col-md-3
            = f.label :name,{class: "form-label"}
          .col-md-7
            = f.text_field :name,{autofocus: true, class: "form-control"}
        .form-group
          .col-md-offset-1.col-md-3
            = f.label :note,{class: "form-label"}
          .col-md-7
            = f.text_field :note,{class: "form-control"}
        .form-group
          .col-md-offset-1.col-md-3
            = f.label :email,{class: "form-label"}
          .col-md-7
            = f.email_field :email,{class: "form-control"}        
          - if devise_mapping.confirmable? && resource.pending_reconfirmation?
            %div.text-primary
              Currently waiting confirmation for: #{resource.unconfirmed_email}
        .form-group
          .col-md-offset-1.col-md-3
            = f.label :password,{class: "form-label"}
          .col-md-7
            %i.text-primary
              (leave blank if you don't want to change it)          
            = f.password_field :password,{class: "form-control",autocomplete: "off"}
        .form-group
          .col-md-offset-1.col-md-3
            = f.label :password_confirmation,{class: "form-label"}
          .col-md-7
            = f.password_field :password_confirmation,{class: "form-control",autocomplete: "off"}            
        .form-group
          .col-md-offset-1.col-md-3
            = f.label :current_password,{class: "form-label"}
          .col-md-7
            %i.text-primary
              (we need your current password to confirm your changes)          
            = f.password_field :current_password,{class: "form-control",autocomplete: "off"} 
        .form-group
          = f.submit "Update",class: "btn btn-primary col-md-offset-4 col-md-3"
      %h3.text-warning
        Cancel my account
      %p.text-warning
        Unhappy?
        #{button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete,class: "btn btn-primary"}
      = link_to "Back", :back,class: "btn btn-primary"
