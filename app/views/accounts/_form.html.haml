.form-horizontal
  = form_for :account,url: accounts_path do |f|
    - if @account.errors.any?
      #error_explanation.alert.alert-warning
        %h2
          = pluralize(@account.errors.count, "error")
          prohibited this user from being saved:
        %ul
          - @account.errors.full_messages.each do |message|
            %li= message
    .form-group
      .col-md-offset-3.col-md-1
        = f.label :name,{class: "form-label"}
      .col-md-7
        = f.text_field :name,{autofocus: true, class: "form-control"}
    .form-group
      .col-md-offset-3.col-md-1
        = f.label :email,{class: "form-label"}
      .col-md-7
        = f.email_field :email,{class: "form-control"}
    .form-group
      .col-md-offset-3.col-md-1
        = f.label :password,{class: "form-label"}
      .col-md-7
        = f.password_field :password,{class: "form-control"}
    .form-group
      .col-md-offset-3.col-md-1
        = f.label :note,{class: "form-label"}
      .col-md-7
        = f.text_area :note,{class: "form-control", rows: 3}
    .form-group
      = f.submit "Save",class: "btn btn-primary col-md-offset-4 col-md-1"
