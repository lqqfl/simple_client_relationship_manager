.form-horizontal
  = form_for(@contract,remote: true) do |f|
    - if @contract.errors.any?
      #error_explanation.alert.alert-warning
        %h2
          = pluralize(@contract.errors.count, "error")
          prohibited this contract from being saved:
        %ul
          - @contract.errors.full_messages.each do |message|
            %li= message
    .form-group
      .col-md-offset-3.col-md-1
        = f.label :name,{class: "form-label"}
      .col-md-7
        = f.text_field :name,{autofocus: true, class: "form-control"}
    .form-group
      .col-md-offset-3.col-md-1
        = f.label :start_time,{class: "form-label"}
      .col-md-3
        = f.date_select :start_time,{class: "form-control"}
    .form-group
      .col-md-offset-3.col-md-1
        = f.label :end_time,{class: "form-label"}
      .col-md-3
        = f.date_select :end_time,{class: "form-control"}
    .form-group
      .col-md-offset-3.col-md-1
        = f.label :exp_amount,{class: "form-label"}
      .col-md-3
        = f.text_field :exp_amount,{class: "form-control"}
    .form-group
      .col-md-offset-3.col-md-1
        = f.label :real_amount,{class: "form-label"}
      .col-md-3
        = f.text_field :real_amount,{class: "form-control"}
    .form-group
      .col-md-offset-3.col-md-1
        = f.label :note,{class: "form-label"}
      .col-md-7
        = f.text_area :note,{class: "form-control", rows: 3}
    .form-group
      .col-md-offset-3.col-md-1
        = f.label :opportunities,{class: "form-label"}
      .col-md-1
        = f.select :opportunities, opportunity_array,{prompt: "Please select",include_blank: true} 
    .form-group
      .col-md-offset-3.col-md-1
        = f.label :users,{class: "form-label"}
      .col-md-1
        = f.select :users, user_array,{prompt: "Please select",include_blank: true}
    .form-group
      .col-md-offset-3.col-md-1
        = f.label :companies,{class: "form-label"}
      .col-md-1
        = f.select :companies, company_array,{prompt: "Please select",include_blank: true}
    .form-group
      .col-md-offset-3.col-md-1
        = f.label :contacts,{class: "form-label"}
      .col-md-1
        = f.select :contacts, contact_array,{prompt: "Please select",include_blank: true}
    .form-group
      = f.submit "Save",class: "btn btn-primary col-md-offset-4 col-md-1"