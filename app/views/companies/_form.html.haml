.form-horizontal
  = form_for(@company) do |f|
    - if @company.errors.any?
      #error_explanation.alert.alert-warning
        %h2
          = pluralize(@company.errors.count, "error")
          prohibited this company from being saved:
        %ul
          - @company.errors.full_messages.each do |message|
            %li= message
    .form-group
      .col-md-offset-3.col-md-1
        = f.label :name,{class: "form-label"}
      .col-md-7
        = f.text_field :name,{autofocus: true, class: "form-control"}
    .form-group
      .col-md-offset-3.col-md-1
        = f.label :note,{class: "form-label"}
      .col-md-7
        = f.text_area :note,{class: "form-control", rows: 3}
    .form-group
      = f.submit "Save",class: "btn btn-primary col-md-offset-4 col-md-1"