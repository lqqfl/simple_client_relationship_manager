%h1 Listing opportunities
%span.badge 
  = @opportunity_counts
%table.table.table-striped.talbe-hover
  %thead
    %tr
      %th.col-md-2.text-center Name
      %th.col-md-2.text-center Note
      %th.col-md-2.text-center Company
      %th.col-md-1.text-center Contact
      %th.col-md-1.text-center Activity
      %th.col-md-1.text-center User
      %th.col-md-1{:colspan => "3"}
  %tbody
    - if @opportunity_counts > 0  
      - @opportunities.each do |opportunity|
        %tr
          %td= opportunity.name
          %td= opportunity.note
          %td= opp_companies(opportunity.id)
          %td= opp_contacts(opportunity.id)
          %td= opp_activities(opportunity.id)
          %td= opp_users(opportunity.id)
          %td= link_to 'Show', opportunity
          %td= link_to 'Edit', edit_opportunity_path(opportunity)
          %td= link_to 'Destroy', opportunity, method: :delete, data: { confirm: 'Are you sure?' }
%br/
.btn.btn-info
  = link_to 'New Opportunity', new_opportunity_path
.btn.btn-info
  = link_to 'Back', welcome_path